import java.util.Scanner;
public class ücgen {
public static void main(String[] args) {
    //deyişken belirliyorum
    double a,b,c,alan,uz;
  // kullanıcıdan verileri alıyorum 
  Scanner veri = new Scanner(System.in);
  System.out.print("1.kenarı girin:");
  a = veri.nextInt();
  System.out.print("2.kenarı girin:");
  b = veri.nextInt();
  System.out.print("3.kenarı giriniz");
  c = veri.nextInt();
  uz = (a+b+c)/2;
  alan = Math.sqrt(uz*(uz-a)*(uz-b)*(uz-c));
  System.out.print("üçgenie alanı: " +alan);



}
    
}
